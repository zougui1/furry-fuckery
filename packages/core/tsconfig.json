{
  "compilerOptions": {
    "composite": true,
    "module": "commonjs",
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "esModuleInterop": true,
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "noEmitOnError": true,
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "lib",
    "target": "ESNext",
    "types": ["jest"]
  },
  "include": ["**/*.ts"],
  "exclude": ["**/*.spec.*", "./lib/**/*"]
}
